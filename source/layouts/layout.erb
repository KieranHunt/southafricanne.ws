<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.min.css" %>
    <%= stylesheet_link_tag "//fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic" %>
    <%= stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/milligram/1.3.0/milligram.min.css" %>
    <%= stylesheet_link_tag "site" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
    <%= javascript_include_tag  "site" %>
  </body>
</html>
